{% extends "layouts/main.njk" %}
{% block body %}

      <h3 class="text-white text-center bg-dark">Area Clienti</h3>
      <hr style="border-top: 1px solid #5375BD;">

      {% if message %}
        {% for message in message %}
          <div class="alert alert-warning">{{message}}</div>
        {% endfor %}
      {% endif %}

      <form role="form" action="/login" method="post">
        <div class="form-group">
          <label  for="inputUsernameEmail" class="text-white col-form-label-lg">Utente</label>
          <div class="input-error" id="wrongMail"></div>
          <input type="text" class="form-control" id="inputUsernameEmail" name="email" value="{{ user }}" placeholder="your@email.address" autofocus required >
        </div>
        <div class="form-group">
          <label for="inputPassword" class="text-white col-form-label-lg">Password</label>
          <input type="password" class="form-control" id="inputPassword" name="password">
        </div>
        <div class="form-check" >
          <input class="form-check-input" type="checkbox" value="" id="checkPwd" onclick="myFunction()" />
          <label class="form-check-label text-white font-weight-light text-justify" for="checkPwd">Mostra Password</label>
        </div>
        <div>
          <a class="text-right nav-link" href="/forgot">Password dimenticata?</a>
        </div>
        <div style="margin-bottom: 40px;">
          <button type="submit" class="btn btn-my btn-lg btn-block" id="mybutton" onclick="return fieldLoginControl()">
            Accedi
          </button>
        </div>
      </form>

