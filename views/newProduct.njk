{% extends "layouts/main.njk" %}
{% block body %}

<div class="text-center sb-font" style="margin:5px 0px 0px 0px; font-size:2em; color:#FF9139;"> Sharingbeer </div>

<div class="form-group" style="margin-top: 10px;">
<form id="productForm" action="/product" method="post">
 <div style="margin:5px 0px 0px 0px;">
    <input  type="text" id="name" name="name" class="form-control" placeholder="Name" required>
 </div>

 <div style="margin:5px 0px 0px 0px;style="margin:5px 0px 0px 0px;>
    <input type="number" step="0.01" id="price" name="price" class="form-control" placeholder="Price" required>
 </div>

 <div style="margin:5px 0px 0px 0px;">
    <input type="text" id="linkImage" name="linkImage" class="form-control" placeholder="Link Image URL" required>
 </div>

 <div style="margin:5px 0px 0px 0px;">
    <textarea id="description" name="description" class="form-control" placeholder="Enter description..."></textarea>
 </div>

 <div style="margin:5px 0px 0px 0px;">
    <input type="number" id="quantity" name="quantity" class="form-control" placeholder="Quantity">
 </div>

 <div style="margin:5px 0px 0px 0px;">
    <input type="text" id="colorEBC" name="colorEBC" class="form-control" placeholder="Color EBC">
 </div>

 <div style="margin:5px 0px 0px 0px;">
    <input type="text" id="volAlcol" name="volAlcol" class="form-control" placeholder="Vol Alcol">
 </div>

 <div style="margin:5px 0px 0px 0px;">
    <input type="text" id="gradoPlato" name="gradoPlato" class="form-control" placeholder="Grado Plato">
 </div>

 <div style="margin:5px 0px 0px 0px;">
    <input type="number" id="tempServ" name="tempServ" class="form-control" placeholder="Temp Serv">
 </div>

 <div style="margin:5px 0px 0px 0px;">
    <input type="text" id="amaroIBU" name="amaroIBU" class="form-control" placeholder="Amaro IBU">
 </div>

 <div style="margin:5px 0px 0px 0px;">
    <input type="text" id="formato" name="formatoCl" class="form-control" placeholder="Formato bottiglia in Cl">
 </div>
 <div style="margin-top:10px;margin-bottom:10px">
 <button type="submit" class="btn btn-my btn-lg btn-block">Submit</button>
 </div>
</form>
</div>

{% endblock %}
