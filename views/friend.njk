{% extends "layouts/main.njk" %}
{% block body %}

  <div class="row">
    <div class="col-sm-3 col-lg-4"></div>
    <div class="col-sm-6 col-lg-4" style="background-color:#2A0009;border-radius:12px 12px 0px 0px;">
      <h3 class="text-white text-center" style="margin:6px 0px 0px 0px;">Your Friend </h3>
      <hr style="border-top: 1px solid #5375BD;">
      
      {% if message %}
        {% for message in message %}
          <div class="alert alert-warning">{{message}}</div>
        {% endfor %}
      {% endif %}

      <div class="card" style="background-color:#2A0009;border-color:#903246;margin: 30px 0px 10px 0px;;">
        <div class="card-body">
          <div class="flex-row">
            <!--h3 class="card-title text-white font-weight-light text-center"> Invita i tuoi amici a bere birra Viana e ottieni ad ogni loro acquisto punti Booze che ti fanno bere gratis </h3-->
            <div ><img class="mx-auto d-block" src="img/quarta-v1-330x390.png" style="height:80%;width:60%;margin-bottom:10px"></div>
            <div class="align-self-center"><p class="card-text text-white font-weight-light text-justify"margin-bottom:20><span  style="font-size:1.2em;">invita i tuoi amici </span> a bere <img style="vertical-align: baseline" height="20" src="/img/birra_viana.png"> e ottieni ad ogni loro acquisto punti <span  style="font-size:1.2em;"> Booze </span> per <span  style="font-size:1.5em;"> sconti del 50%!</span></p></div>
          </div>
        </div>
      </div>

      <form role="form" action="/recomm" method="POST">
        <div class="form-group">
          <label for="inputUsernameEmail" class="text-white col-form-label-lg">Email</label>
          <div style="color:#ffc107; font-size:80%;" id="wrongMail"></div>
          <input type="email" class="form-control" id="inputUsernameEmail"
          name="email" placeholder="your@email.address" autofocus required {controlSates}>
        </div>
        <div class="form-group">
          <label for="inputUsernameEmail" class="text-white col-form-label-lg">Name</label>
          <input type="text" class="form-control" id="inputFirsName"
          name="firstName" placeholder="First name" required {controlSates}>
        </div>
        <button type="submit" class="btn btn-my btn-lg btn-block {controlSates}" onfocus="this.disabled={[flag]}" onclick="return fieldLoginControl()">
          <h4>Sign Up</h4>
        </button>
      </form>
      <br>
    </div>
    <div class="col-sm-3 col-lg-4"></div>
  </div>
  <div class="row">
    <div class="col-sm-3 col-lg-4"></div>
      <div class="col-sm-6 col-lg-4" style="background-color:#ffc85d;border-radius:0px 0px 12px 12px">
        <br>
        <p class="text-left"><strong> Friends  invited </strong></p>    
        <div class="progress">
          <div class="progress-bar" role="progressbar" aria-valuenow="{{friendsInvited}}" aria-valuemin="0" aria-valuemax="{{invitationAvailable}}" style="width:{{percentage}}%; background-color:#480413">
            {{friendsInvited}}
          </div>
        </div>
        <p class="text-right"> Invitations available {{invitationAvailable}} </p>
      </div>
    <div class="col-sm-3 col-lg-4"></div>
  </div>  

{% endblock %}
